<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#9C27B0"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StuOfEight">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Id"
            android:layout_gravity="center"
            android:textAllCaps="false"
            android:textColor="#590268"
            android:textSize="15sp"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/ed"
            android:layout_marginLeft="10dp"
            android:hint="Enter name"
            android:textColorHint="#775D5D"
            android:textAllCaps="false"
            android:textSize="15sp"
            android:textColor="#2C0202"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
         android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:layout_gravity="center"
            android:textAllCaps="false"
            android:textColor="#590268"
            android:textSize="15sp"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/ed1"
            android:layout_marginLeft="10dp"
            android:hint="Enter name"
            android:textColorHint="#775D5D"
            android:textAllCaps="false"
            android:textSize="15sp"
            android:textColor="#2C0202"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address"
            android:layout_gravity="center"
            android:textAllCaps="false"
            android:textColor="#590268"
            android:textSize="15sp"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/ed2"
            android:layout_marginLeft="10dp"
            android:hint="Enter address"
            android:textColorHint="#775D5D"
            android:textAllCaps="false"
            android:textSize="15sp"
            android:textColor="#2C0202"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Blood Group"
            android:layout_gravity="center"
            android:textAllCaps="false"
            android:textColor="#590268"
            android:textSize="15sp"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/ed3"
            android:layout_marginLeft="10dp"
            android:hint="Enter blood group"
            android:textColorHint="#775D5D"
            android:textAllCaps="false"
            android:textSize="15sp"
            android:textColor="#2C0202"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <LinearLayout

        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date of Birth"
            android:layout_gravity="center"
            android:textAllCaps="false"
            android:textColor="#590268"
            android:textSize="15sp"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/ed4"
            android:layout_marginLeft="10dp"
            android:hint="Enter date of birth"
            android:textColorHint="#775D5D"
            android:textAllCaps="false"
            android:textSize="15sp"
            android:textColor="#2C0202"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone No"
            android:layout_gravity="center"
            android:textAllCaps="false"
            android:textColor="#590268"
            android:textSize="15sp"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/ed5"
            android:layout_marginLeft="10dp"
            android:hint="Enter phone no"
            android:textColorHint="#775D5D"
            android:textAllCaps="false"
            android:textSize="15sp"
            android:textColor="#2C0202"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>


    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/addId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add data"

            android:textSize="15sp"
            android:textAllCaps="false"
            android:background="#54D6E2"
            android:textColor="#065A50"
            />
        <Button
            android:id="@+id/viewId"


            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View data"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"
            android:textAllCaps="false"
            android:background="#54D6E2"
            android:textColor="#065A50"/>

    </LinearLayout>


    <LinearLayout

        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/deleteId"


            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete data"
            android:textSize="15sp"
            android:textAllCaps="false"
            android:background="#54D6E2"
            android:textColor="#065A50"/>


        <Button
            android:id="@+id/updateId"


            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update data"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"
            android:textAllCaps="false"
            android:background="#54D6E2"
            android:textColor="#065A50"/>


    </LinearLayout>




</LinearLayout>